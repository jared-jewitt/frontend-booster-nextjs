{
  "name": "frontend-booster-nextjs",
  "version": "1.0.0",
  "description": "NextJS boilerplate",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "build": "webpack",
    "prod": "cross-env NODE_ENV=production PORT=${PORT:-4002} next start",
    "dev": "cross-env NODE_ENV=development PORT=${PORT:-4000} next dev",
    "test": "cross-env NODE_ENV=test PORT=${PORT:-4001} npm run test:unit && npm run test:e2e:headless",
    "test:e2e": "cross-env NODE_ENV=test PORT=${PORT:-4001} start-server-and-test dev http://localhost:${PORT:-4001} 'cypress open'",
    "test:e2e:headless": "cross-env NODE_ENV=test PORT=${PORT:-4001} start-server-and-test dev http://localhost:${PORT:-4001} 'cypress run'",
    "test:unit": "cross-env NODE_ENV=test TS_NODE_COMPILER_OPTIONS='{ \"module\": \"CommonJS\" }' mocha -r dotenv-flow/config -r ts-node/register -r tsconfig-paths/register -r jsdom-global/register"
  },
  "dependencies": {
    "@types/chai": "^4.2.22",
    "@types/faker": "^5.5.9",
    "@types/mocha": "^9.0.0",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@types/sinon": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^7.0.3",
    "cypress": "^8.7.0",
    "dotenv-flow": "^3.2.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "faker": "^5.5.3",
    "jsdom": "18.0.1",
    "jsdom-global": "3.0.2",
    "mocha": "^9.1.3",
    "next": "^12.0.2",
    "nprogress": "^0.2.0",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sass": "^1.43.4",
    "sharp": "^0.29.2",
    "sinon": "^12.0.1",
    "start-server-and-test": "^1.14.0",
    "stylelint": "^14.0.1",
    "stylelint-config-standard-scss": "^2.0.1",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6"
  }
}
